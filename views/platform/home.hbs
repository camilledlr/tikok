{{>customerNavBar}}
<header id="header-home">
    <div>
    <div>
    <h1 id="title">tikok</h1>
    <h2>Consommez autrement,<br>Achetez auprès de commerçants <div id="indépendants">INDEPENDANTS</div></h2>
    </div>
    {{>searchBar}}
    </div>
    <img id="header-logo" src="https://res.cloudinary.com/dyvosdvps/image/upload/v1581546572/tikok-pictures/Sans_titre_1_b7shu3.png">
</header>
<section id="main-home">
    {{>googleMap}}
        <h2>Toutes vos courses ...</h2>
        <hr>
    <div class="display-categories grid-container">
        <a href="/shopping/category/fruits"><div id="fruits-block" class="category-block"><div class="word-placeholder">Fruits</div></div></a>
        <a href="/shopping/category/vegetables"><div id="vegetables-block" class="category-block"><div class="word-placeholder">Légumes</div></div></a>
        <a href="/shopping/category/fishes&seafood"><div id="fishes-block" class="category-block"><div class="word-placeholder">Fruits de mer</div></div></a>
        <a href="/shopping/category/meats"><div id="meats-block" class="category-block"><div class="word-placeholder">Viandes</div></div></a>
        <a href="/shopping/category/grocery"><div id="grocery-block" class="category-block"><div class="word-placeholder">Épiceries</div></div></a>
        <a href="/shopping/category/artisan"><div id="artisan goods" class="category-block"><div class="word-placeholder">Artisanat</div></div></a>
        <a href="/shopping/category/other"><div id="other-block" class="category-block"><div class="word-placeholder">Autres</div></div></a>
    </div>
    <div id="shops">
    <h2>Quelques Boutiques</h2>
    <hr>
    <div id="someShops">
        {{#each sixShops}}
        <a href="/shopping/shop/{{this.id}}">
        <div class="shop-block">
            <img class="image-shop"alt="shop" src="{{this.image}}" width="300">
            <h3>{{this.name}}</h3>
            <p class="description">{{this.description}}</p>
        </div>
        </a>
        {{/each}}
    </div>
    </div>
</section>

