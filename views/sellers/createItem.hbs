{{>sellerNavBar}}
<section class="main">
<div class="big-container product-manage-wrapper flexed-item">
<h3 class="form-title">Ajouter un produit</h3>
<form action="/myshop/create-item/{{shop.id}}" method="post" class="add-product-form"
enctype="multipart/form-data">
<div class="image-upload image-container">
        <label for="file-input">
          <div class="image-upload image-container">
          <img id="product-image" src={{shop.image}} width="200">
            <div class="circle-add-image">
                <i class="fas fa-plus"></i>
            </div>
        </label>
        <input class="input" id="file-input" type="file" name="image" value={{shop.image}}>
</div>
<div class="form-item-wrapper flexed-item">
<label for="category" name="category" class="label-name label">Category</label>
<select name="category" id="Products" class="select">
<option value="-1" name="category" disabled selected>Choose a category</option>
<option value="fruits" name="category">Fruits</option>
<option value="vegetables" name="cagetory">Vegetables</option>
<option value="fishes&seafood" name="category">Fishes and Seafood</option>
<option value="meats" name="category">Meats</option>
<option value="artisan goods" name="category">Artisan Goods</option>
<option value="growcery" name="category">Growcery</option>
<option value="other" name="category">Other</option>
</select>
</div>

<div class="form-item-wrapper flexed-item">
<label for="name" class="label-ref label">Nom</label>
<input id="name" name="name" type="name" class="inputlogin" placeholder="ex: Pomme" required>
</div>
<div class="form-item-wrapper flexed-item">
<label for="price" class="label-ref label">Prix</label>
<input id="price" name="price" type="price" class="inputlogin" placeholder="ex: 2" required>
<select name="unity" id="unity" class="select" required>
<option value="/kg" name="unity">/kg</option>
<option value="l'unité" name="unity">l'unité</option>
</div>
<div class="form-item-wrapper flexed-item">
<label for="description" class="label-ref label">Description</label>
<input id="description" name="description" type="description" class="inputlogin" placeholder="Golden">
</div>
<div>
<button class="submit-button">Ajouter</button>
</div>
</form>
</div>
</section>