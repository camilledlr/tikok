<section class="sign form-container">
  <header class="form-header">
    <h1 class="form-title">Sign Up</h1>
  </header>
 
  <form method="post" action="/myshop/signup" id="form_seller">
  <h2 class="AboutYourShop">About your shop</h2>
    <div class="form-item-wrapper flexed-item">
      <label for="name" class="label-ref label">Shop Name</label>
      <input id="name" name="name" type="text" class="input-text input" placeholder="Passion">
    </div>
    <h2 class="AboutYourShop">About you</h2>
    <div class="form-item-wrapper flexed-item">
      <label for="username" class="label-ref label">Name</label>
      <input id="username" name="username" type="text" class="input-text input" placeholder="Jean">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" name="email" type="email" class="input-text input" placeholder="jean.desmoulins@gmail.com">
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" name="password" type="password" class="input-text input" placeholder="••••••">
    </div>
    <button class="btn-signup">Create Shop</button>
  </form>

  {{> flashMessage }}

  <p class="form-sub-infos">Already have an account ? <a href="/myshop/login" class="button-link-form">Sign In</a></p>
</section>