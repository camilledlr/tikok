<section class="sign form-container">
  <header class="form-header">
    <h1 class="form-title">Bonjour</h1>
  </header>

  <form method="post" action="/myshop/login" id="form_seller">
    <div class="form-item-wrapper flexed-item">
      <label for="email" class="label-ref label">Email</label>
      <input id="email" name="email" type="email" class="input-text input" placeholder="albert.biceps@gmail.com" required>
    </div>
    <div class="form-item-wrapper flexed-item">
      <label for="password" class="label-ref label">Password</label>
      <input id="password" name="password" type="password"  class="input-text input" placeholder="••••••">
    </div>
    <button class="button-primary white">Log in</button>
  </form>
  <p class="form-sub-infos">Don't have an account yet ? <a href="/myshop/signup" class="button-link-form">Sign Up</a></p>
</section>