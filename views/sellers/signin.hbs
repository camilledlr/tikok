{{>sellerNavBar}}

<div class="tout">
  <section class="sign form-container">
    <header class="form-header">
      <h1 class="form-title">Bèl Bonjou</h1>
    </header>
    {{> flashMessage }}
    <br>
    <form method="post" action="/myshop/login" id="form_seller" class="formlogin">
      <div class="form-item-wrapper flexed-item">
        <label for="email" class="label-ref label">Email</label>
        <input id="email" name="email" type="email" class="inputlogin" placeholder="ex: albert.biceps@gmail.com" required>
      </div>
      <br>
      <div class="form-item-wrapper flexed-item">
        <label for="password" class="label-ref label">Mot de passe</label>
        <input id="password" name="password" type="password" class="inputlogin" placeholder="Rentrez votre mot de passe">
      </div>

      <br>

      <div class="btnlogin">
        <button class="submit-button">Se connecter</button>
      </div>

      <br>
    </form>
    <br>
    <p class="form-sub-infos"> Nouveau client ? <a href="/myshop/signup" class="button-link-form">Créez un compte</a>
    </p>
  </section>
</div>